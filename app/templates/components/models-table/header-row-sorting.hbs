<tr>
  {{#each processedColumns as |column|}}
    {{#if column.isVisible}}
      {{#if column.tooltip}}
        {{#if column.useSorting}}
          <th data-placement="bottom" title="{{column.tooltip}}" data-trigger="click hover" data-container="body" class="{{classes.theadCell}}" {{action "sort" column}}>
            {{#if column.templateForSortCell}}
              {{partial column.templateForSortCell}}
            {{else}}
              {{#if column.componentForSortCell}}
                {{component column.componentForSortCell data=data column=column row=record table=this}}
              {{else}}
                {{column.title}}
                {{partial headerSortingIconsTemplate}}
              {{/if}}
            {{/if}}
            <i class="fa fa-question-circle" aria-hidden="true"></i>
          </th>
        {{else}}
          <th data-placement="bottom" title="{{column.tooltip}}" data-container="body hover" class="{{classes.theadCell}} {{classes.theadCellNoSorting}}">
            {{#if column.templateForSortCell}}
              {{partial column.templateForSortCell}}
            {{else}}
              {{#if column.componentForSortCell}}
                {{component column.componentForSortCell data=data column=column row=record table=this}}
              {{else}}
                {{column.title}}
              {{/if}}
            {{/if}}
            <i class="fa fa-question-circle" aria-hidden="true"></i>
          </th>
        {{/if}}
      {{else}}
        {{#if column.useSorting}}
          <th class="{{classes.theadCell}}" {{action "sort" column}}>
            {{#if column.templateForSortCell}}
              {{partial column.templateForSortCell}}
            {{else}}
              {{#if column.componentForSortCell}}
                {{component column.componentForSortCell data=data column=column row=record table=this}}
              {{else}}
                {{column.title}}
                {{partial headerSortingIconsTemplate}}
              {{/if}}
            {{/if}}
          </th>
        {{else}}
          <th class="{{classes.theadCell}} {{classes.theadCellNoSorting}}">
            {{#if column.templateForSortCell}}
              {{partial column.templateForSortCell}}
            {{else}}
              {{#if column.componentForSortCell}}
                {{component column.componentForSortCell data=data column=column row=record table=this}}
              {{else}}
                {{column.title}}
              {{/if}}
            {{/if}}
          </th>
        {{/if}}
      {{/if}}
    {{/if}}
  {{/each}}
</tr>
